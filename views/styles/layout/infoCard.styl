.infoCard
  background white
  @media(min-width: 768px)
    box-shadow: 1px 1px 20px 10px rgba(200,200,200,0.1)
  margin-bottom 20px
  .infoSubheadline
    padding 10px 30px
    background $theme-color
    box-shadow 0px 0px 5px 1px rgba(100, 100, 100, 0.1)
    h1, h2, p, a
      margin 0px
      color white
  .actLink
    background $theme-color-light
  .actLink:hover
    opacity 0.9
  .infoBody
    padding 30px
    >.infoHeadline
      h1, h2, p
        margin 0px
        font-weight 200
        color black
      h1
        font-size 1.6em
        margin 5px 0px
      h2 
        font-size 1.5em
        padding 5px 0px
        border-bottom none
    h2
      font-weight 600
      color #666
      font-size 1em
      border-bottom 1px solid #eee
      padding-bottom 4px
